<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreferenceCompat
        app:key="screenOn"
        app:title="@string/keepScreenOn"
        app:summary="@string/keepScreenOnSummary"/>

    <SwitchPreferenceCompat
        app:key="systemBrightness"
        app:title="@string/systemBrightness"
        app:summary="@string/keepScreenOnSummary"/>

    <SeekBarPreference
        app:title="@string/brightness"
        app:key="brightness"
        app:defaultValue="80"
        app:min="1"
        android:max="100"
        />

    <SwitchPreferenceCompat
        app:key="fullscreen"
        app:title="@string/fullscreen"/>

    <ListPreference
        app:title="@string/orientation"
        app:key="orientation"
        app:defaultValue="-1"
        app:entries="@array/orientations"
        app:entryValues="@array/orientationValues" />

    <SeekBarPreference
        app:title="Track width"
        app:key="trackWidth"
        app:defaultValue="1"
        app:min="1"
        android:max="50"
        />

    <SeekBarPreference
        app:title="Track alpha"
        app:key="trackAlpha"
        app:defaultValue="80"
        app:min="10"
        android:max="90"
        />

    <ListPreference
        app:title="@string/trackColor"
        app:key="trackColor"
        app:defaultValue="#0000FF"
        app:entries="@array/colors"
        app:entryValues="@array/colorValues" />

</PreferenceScreen>
